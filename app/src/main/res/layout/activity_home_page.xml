<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomePageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#525BFF"
        android:elevation="4dp"
        style="@style/CustomToolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_home_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/splash_regular"
            android:textSize="36sp"
            android:layout_marginBottom="16dp"
            android:text="Homepage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textSize="20sp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/princesssofia_regular"/>
            <TextView
                android:id="@+id/usernameHomePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="#525BFF"
                android:textSize="24sp"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/princesssofia_regular"/>
        </LinearLayout>

        <ImageView
            android:layout_width="144dp"
            android:layout_marginTop="16dp"
            android:layout_height="200dp"
            android:src="@drawable/img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="How are you doing today?"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/sad"
                android:translationZ="4dp"
                android:elevation="4dp"
                android:layout_margin="16dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_sad"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/happy"
                android:translationZ="4dp"
                android:elevation="4dp"
                android:layout_margin="16dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/button_happy"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>